{
    "ecmaFeatures": {
        "modules": true,
        "spread" : true,
        "restParams" : true
    },
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "extends": ["plugin:prettier/recommended"],
    "plugins": ["prettier"],
    "rules" : {
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used" }],
        "no-undef" : 2,
        "prettier/prettier": "error",
      "arrow-body-style": "off",
      "prefer-arrow-callback": "off"
        },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    }
    
  }